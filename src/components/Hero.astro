<section class="relative min-h-[85vh] flex items-center overflow-hidden">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-secondary via-white to-primary/5"></div>

  <!-- Decorative Blobs -->
  <div class="absolute top-20 right-0 w-80 h-80 bg-primary/8 rounded-full blur-3xl"></div>
  <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-accent-green/6 rounded-full blur-3xl"></div>
  <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-secondary rounded-full blur-3xl"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24 pt-32">
    <!-- Tagline -->
    <div class="animate-fade-in-up">
      <span class="inline-flex items-center gap-2 text-sm font-medium text-primary tracking-wide uppercase mb-6">
        <span class="w-8 h-px bg-primary"></span>
        Garten · Pflanzen · Wissen
      </span>
    </div>

    <!-- Headline -->
    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-slate-900 leading-[1.05] tracking-tight max-w-4xl animate-fade-in-up delay-100">
      Gärtnern mit Verstand.
      <br />
      <span class="text-primary">Nicht mit Glück.</span>
    </h1>

    <!-- Subline -->
    <p class="mt-6 text-lg md:text-xl text-slate-600 max-w-2xl leading-relaxed animate-fade-in-up delay-200">
      Praxiserprobte Tipps für Garten, Balkon und Fensterbank – fundiert statt Pinterest-Mythen.
    </p>

    <!-- CTAs -->
    <div class="mt-10 flex flex-col sm:flex-row gap-4 animate-fade-in-up delay-300">
      <a
        href="#kategorien"
        class="inline-flex items-center justify-center px-8 py-3.5 bg-primary hover:bg-primary-dark text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg"
      >
        Themen entdecken
      </a>
      <a
        href="#neueste"
        class="inline-flex items-center justify-center gap-2 px-8 py-3.5 text-primary hover:text-primary-dark font-medium border border-primary/30 hover:border-primary/60 rounded-lg transition-all duration-300"
      >
        Neuste Beiträge
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>

    <!-- Scroll Indicator -->
    <div class="mt-16 animate-fade-in-up delay-500">
      <div class="flex items-center gap-2 text-slate-400 text-sm">
        <div class="w-px h-8 bg-slate-300"></div>
        <span>Scroll</span>
      </div>
    </div>
  </div>
</section>
