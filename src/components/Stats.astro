---
const stats = [
  { value: '50+', label: 'Fundierte Artikel' },
  { value: '6', label: 'Themenbereiche' },
  { value: '0%', label: 'Blumenm√§rchen' },
];
---

<section class="py-16 md:py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
      {stats.map((stat) => (
        <div>
          <span class="text-4xl md:text-5xl font-bold text-primary">{stat.value}</span>
          <p class="text-sm text-slate-500 mt-2 font-medium">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>
